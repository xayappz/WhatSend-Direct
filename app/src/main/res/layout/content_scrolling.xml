<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.MainActivity"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/savedIntro"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
>
<TextView
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:text="SAVED TEXT :  "
    android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/preftextv"
            android:text="Hi..this is my number :)"
            android:textColor="@android:color/background_dark"
            android:layout_height="wrap_content"/>

        />

</LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:hint="@string/intro">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/introTxt"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/setBn"
            android:background="@color/colorAccent"
            android:padding="5dp"

            android:drawableRight="@drawable/ic_check_black_24dp"
            android:text="Set Intro TEXT"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>